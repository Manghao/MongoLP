{% extends "template/layout.twig" %}

{% set title = 'Connexion' %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger mt-3" role="alert">
            {{ error[0].msg }}
        </div>
    {% endif %}

    <div class="ui middle aligned center aligned auth grid">
        <div class="card mt-3 mb-3">
            <h4 class="card-header">
                <i class="user icon"></i>Connexion
            </h4>
            <div class="card-body">
                <form class="ui large form" action="validLogin" method="POST">
                    <div class="mb-3 input-group">
                        <span class="input-group-addon" id="addon-email"><i class="fa fa-envelope"></i></span>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{ query.email }}" required>
                    </div>
                    <div class="mb-3 input-group">
                        <span class="input-group-addon" id="addon-pwd"><i class="fa fa-key"></i></span>
                        <input type="password" class="form-control" name="password" placeholder="Mot de passe" required>
                    </div>

                    <input type="submit" class="btn btn-primary mb-3" value="Valider">
                </form>
                <div class="message">
                    Vous ne poss√©dez pas de compte ? <a href="register">Inscrivez-vous</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}